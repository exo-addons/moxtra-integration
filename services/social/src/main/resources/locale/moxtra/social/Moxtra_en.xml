<?xml version="1.0" encoding="UTF-8"?>
<bundle>
  <MoxtraBinderSpacePortlet>
    <label>
      <name>E-Conversation</name>
    </label>
  </MoxtraBinderSpacePortlet>
  <MoxtraBinderSpaceController>
    <title>E-Conversation settings</title>
    <enableBinder>Enable E-Conversation</enableBinder>
    <enableBinderHint>Enable E-Conversation for this space</enableBinderHint>
    <selectBinder>Moxtra Binder for conversations</selectBinder>
    <newBinderHint>Create new Binder</newBinderHint>
    <selectBinderHint>Use existing Binder</selectBinderHint>
    <autocreateUsers>Create new users in Binder</autocreateUsers>
    <autocreateUsersHint>Automatically create new space users in Moxtra Binder</autocreateUsersHint>
    <syncComments>Synchronize comments with Binder</syncComments>
    <syncCommentsHints>Automatically synchronize comments with Moxtra Binder</syncCommentsHints>
    <save>Save</save>
    <cancel>Cancel</cancel>
  </MoxtraBinderSpaceController>
  <ECMContextMenu>
    <event>
      <EditInMoxtra>Open in E-Conversation</EditInMoxtra>
    </event>
  </ECMContextMenu>
  <Moxtra>
    <loginMoxtra>Log in Moxtra</loginMoxtra>
    <loginMoxtraHint>Authorization in Moxtra required</loginMoxtraHint>
    <waitConversationPagePreparing>Your conversation is preparing. Please wait.</waitConversationPagePreparing>
    <conversationPageNotOpen>E-Conversation page cannot be open. Try again in few minutes.</conversationPageNotOpen>
    <poweredBy>Powered by</poweredBy>
    <error>
      <errorOpeningInMoxtra>Error opening document in E-Conversation</errorOpeningInMoxtra>
      <noMoxraBinder>E-Conversation must be enabled</noMoxraBinder>
      <editInMoxtraError>Error opening E-Conversation form</editInMoxtraError>
    </error>
  </Moxtra>
</bundle>