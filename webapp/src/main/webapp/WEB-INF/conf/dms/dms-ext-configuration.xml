<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
  xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <external-component-plugins>
    <target-component>org.exoplatform.webui.ext.UIExtensionManager</target-component>
    <component-plugin>
      <name>Add Moxtra Space Actions</name>
      <set-method>registerUIExtensionPlugin</set-method>
      <type>org.exoplatform.webui.ext.UIExtensionPlugin</type>
      <init-params>
        <object-param>
          <name>OpenEConversation</name>
          <object type="org.exoplatform.webui.ext.UIExtension">
            <field name="type">
              <string>org.exoplatform.ecm.dms.UIActionBar</string>
            </field>
            <field name="name">
              <string>OpenEConversation</string>
            </field>
            <field name="component">
              <string>org.exoplatform.moxtra.social.ecms.OpenEConversationManagerComponent</string>
            </field>
            <field name="rank">
              <int>40</int>
            </field>
            <field name="extendedFilters">
              <collection type="java.util.ArrayList">
                <value>
                  <object type="org.exoplatform.moxtra.social.ecms.SpaceDocumentsFilter"></object>
                </value>
                <value>
                  <object type="org.exoplatform.ecm.webui.component.explorer.control.filter.IsNotInTrashFilter"></object>
                </value>
                <value>
                  <object type="org.exoplatform.moxtra.social.ecms.FileTypeFilter">
                    <field name="mimeTypes">
                      <collection type="java.util.LinkedHashSet"> 
                        <value><string>text/</string></value>
                        <value><string>image/</string></value>
                        <value><string>application/</string></value>
                      </collection>
                    </field>
                  </object>
                </value>
              </collection>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>